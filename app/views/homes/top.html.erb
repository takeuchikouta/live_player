<div class="container py-5">
  <div class="text-center mb-5">
    <h2 class="logo">Live Player</h2>
    <p>すべての音楽ファンに</p>
  </div>

  <div class="row mb-5">
    <div class="col-md-6 mb-5 mb-md-0">
      <h3 class="text-center mb-3">
        ログイン
      </h3>
      <%= link_to '主催者', new_organizer_session_path, class: 'btn btn-info btn-block' %>
      <%= link_to '参加者', new_applicant_session_path, class: 'btn btn-info btn-block' %>
    </div>
    <div class="col-md-6">
      <h3 class="text-center mb-3">
        新規登録
      </h3>
      <%= link_to '主催者', new_organizer_registration_path, class: 'btn btn-info btn-block' %>
      <%= link_to '参加者', new_applicant_registration_path, class: 'btn btn-info btn-block' %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 col-md-4 mx-auto">
      <%= link_to '参加者(ゲストログイン)', applicants_guest_sign_in_path, method: :post, class: 'btn btn-secondary btn-block' %>
    </div>
  </div>
</div>