<div class="container py-5">
  <h2 class="mt-3">イベントの主催</h2>
  <%= form_with model: @event, url: organizers_events_path do |f| %>
    <div class="form-group">
      <%= f.label :image, '画像' %>
      <div>
        <%= f.file_field :image, accept: "image/*" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :name, 'イベント名' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :description, 'イベント詳細' %>
      <%= f.text_area :description, rows: 5, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit 'イベント作成', class: 'btn btn-success'%>
    </div>
  <% end %>
</div>