<div class="container py-5">
  <h2 class="mt-3">イベントの編集</h2>
  <%= form_with model: @event, url: organizers_event_path(@event) do |f| %>
    <div class="form-group">
      <%= f.label :image, '画像' %>
      <div>
        <%= f.file_field :image, accept: "image/*" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :name, 'イベント名' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :description, 'イベント詳細' %>
      <%= f.text_area :description, rows: 5, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit 'イベント作成', class: 'btn btn-success'%>
    </div>
  <% end %>

  <%= link_to 'このイベントを削除する', organizers_event_path, method: :delete, class: 'btn btn-danger btn-sm', data: {confirm: "このイベントを削除しますか？\n削除すると参加表明も消えます。"} %>
</div>